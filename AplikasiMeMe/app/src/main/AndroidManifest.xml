<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aplikasimeme">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Util.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MeMe"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AplikasiMeMe">
        <activity
            android:name=".ProfilActivity"
            android:label="Profil" />
        <activity
            android:name=".HubungiActivity"
            android:label="Hubungi Kami" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AplikasiMeMe" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:label="Login"/>
        <activity android:name=".RegisterActivity"
            android:label="Registrasi"/>
        <activity
            android:name=".ProdukActivity"
            android:label="Produk" />
        <activity
            android:name=".ActivityProdukSatu"
            android:label="Detail" />
        <activity android:name=".ActivityProdukDua" />
        <activity android:name=".ActivityProdukTiga" />
        <activity android:name=".ActivityProdukEmpat" />
        <activity android:name=".ActivityProdukLima" />
        <activity
            android:name=".CheckoutActivity"
            android:label="Checkout" />
        <activity
            android:name=".LogoutActivity"
            android:label="Logout" />
    </application>

</manifest>