<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".HubungiActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/nama"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:text="Nama                  "
                android:textSize="16dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/inp_nama"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/jumlah_produk"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:text="Email                   "
                android:textSize="16dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="10dp"/>

            <EditText
                android:id="@+id/inp_email"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="65dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/harga_produk"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:text="Subject pesan    "
                android:textSize="16dp"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/inp_subject"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/ongkir_produk"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:text="Pesan                  "
                android:textSize="16dp"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="10dp"
                />

            <EditText
                android:id="@+id/inp_pesan"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="155dp"
                android:layout_marginRight="10dp" />

            <Button
                android:id="@+id/btnpesan"
                style="@style/CardView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="230dp"
                android:text="Kirim Pesan"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/btnbatal"
                style="@style/CardView"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="280dp"
                android:text="Batal"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal"
                app:backgroundTint="#F16C6C" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            app:cardBackgroundColor="#EDF3F2">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="30dp"
                android:text="Alamat Jl. Melati - Gending, Probolinggo"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="70dp"
                android:text="No. HP 02100110003"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="110dp"
                android:text="Email: tokooleholeh@gmail.com"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="150dp"
                android:text="Website www.tokooleh-oleh.com"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>

</LinearLayout>