<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:layout_width="397dp"
        android:layout_height="208dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/oleh_1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />



    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di Toko Online Toko Oleh-Oleh"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="238dp">

    </TextView>

    <TextView
        android:layout_width="368dp"
        android:layout_height="29dp"
        android:text="Belanja oleh-oleh dengan murah, mudah dan cepat"
        android:textSize="12dp"
        android:textStyle="normal"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="3dp"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="283dp">

    </TextView>

    <Button
        android:id="@+id/btnbelanja"
        style="@style/CardView"
        android:layout_width="150dp"
        android:layout_height="51dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:text="Belanja sekarang!"
        android:layout_marginBottom="23dp"
        app:backgroundTint="@color/teal_700"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="312dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/teal_700"
        android:text="Produk terbaru"
        android:textColor="@color/black"
        android:textSize="17dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="375dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                app:srcCompat="@drawable/p_6" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sari Buah Mangga"
                android:layout_marginTop="105dp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 4.000"
                android:layout_marginTop="130dp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                app:srcCompat="@drawable/p_4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sari Buah Pokak"
                android:layout_marginTop="105dp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp 4.000"
                android:layout_marginTop="130dp"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>